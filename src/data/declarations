# declarations settings for gneposis publisher
# by Adam Szieberth

# author and title declarations

author : (name :: sortname) required meta
title : (title <:: subtitle>) required single meta

# declarations of metadata

date : (year <:: month> <:: day>) single meta
description : () single meta
isbn : (isbn) single meta

# main structure declarations

book : (title <:: subtitle>) level=1 style
part : (title <:: subtitle>) level=2 style
chapter : (title <:: subtitle>) level=3 style
section : (title <:: subtitle>) level=4 style
paragraph : (title) level=5 style
stars : () style

# remaining structure declarations

copyright : () style=copyright row
dedication: () style=dedication
foreword : (title) style
preface : (title) style
intro : (title) style

announcement : ()

# notes and footnotes

footnote : (footnote) inline
note : (note) inline

# style declarations

left: () style=left
right : () style=right
center : () style=center

end: () style

# declarations for special contents

verse : (<title> <:: author>) style=verse row
