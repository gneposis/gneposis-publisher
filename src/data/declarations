# declarations settings for gneposis publisher
# by Adam Szieberth

# author and title declarations

author : (name :: sortname) required meta
title : (title <:: subtitle>) required single meta

# declarations of metadata

date : (year <:: month> <:: day>) single meta
description : () single meta
isbn : (isbn) single meta

# main structure declarations

book : (title <:: subtitle>) level=1 class block
part : (title <:: subtitle>) level=2 class block
chapter : (title <:: subtitle>) level=3 class block
section : (title <:: subtitle>) level=4 class block
paragraph : (title) level=5 class
stars : () class

# remaining structure declarations

copyright : () class=copyright row block
dedication: () class=dedication block
foreword : (title) class block
preface : (title) class block
intro : (title) class block

announcement : () block

# notes and footnotes

footnote : (footnote) inline
note : (note) inline

# class declarations

left: () class=left
right : () class=right
center : () class=center

end: () class

# declarations for special contents

verse : (<title> <:: author>) class=verse row
