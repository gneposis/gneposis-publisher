# declarations settings for gneposis publisher
# by Adam Szieberth

# author and title declarations

author : (name :: sortname) required 
title : (title <:: subtitle>) required single

# declarations of metadata

date : (year <:: month> <:: day>) single
description : (description) single
isbn : (isbn) single

# main structure declarations

book : (title <:: subtitle>) main level=1
part : (title <:: subtitle>) main level=2
chapter : (title <:: subtitle>) main level=3
section : (title <:: subtitle>) main level=4
paragraph : (title) main level=5
stars : () level=100

# remaining structure declarations

copyright : () matter
foreword : (title) matter
preface : (title) matter
intro : (title) main

announcement : ()

# notes and footnotes

footnote : (footnote) inline
note : (note) inline

# style declarations

right : ()

# declarations for special contents

verse : (<title> <:: author>)
