# declarations settings for gneposis publisher
# by Adam Szieberth

# author and title declarations

author : (name :: sortname) required meta
title : (title <:: subtitle>) required single meta

# declarations of metadata

date : (year <:: month> <:: day>) single meta
description : () single meta
isbn : (isbn) single meta

# main structure declarations

book : (title <:: subtitle>) level=1 class endall
part : (title <:: subtitle>) level=2 class endall
chapter : (title <:: subtitle>) level=3 class endall
section : (title <:: subtitle>) level=4 class endall
paragraph : (title) level=5 class endall
stars : () class endall

# remaining structure declarations

copyright : () class=copyright row endall
dedication: () class=dedication endall
motto : () class=motto endable
foreword : (title) class endall
preface : (title) class endall
intro : (title) class endall

announcement : () endall

# notes and footnotes

footnote : (footnote) inline
note : (note) inline

# class declarations

left: () class=left endable
right : () class=right endable
center : () class=center endable

smallcaps : (content) class=smallcaps
underline : (content) class=underline

end: () class end
endall: () class endall

# declarations for special contents

frame : (borderwidth) endable
verse : (<title> <:: author>) class=verse row endable
