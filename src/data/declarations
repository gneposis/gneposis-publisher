# declarations settings for gneposis publisher
# by Adam Szieberth

# author and title declarations

author : (name :: sortname) required meta
title : (title <:: subtitle>) required single meta

# declarations of metadata

date : (year <:: month> <:: day>) single meta
description : () single meta
isbn : (isbn) single meta

# main structure declarations

book : (title <:: subtitle>) level=1 class
part : (title <:: subtitle>) level=2 class
chapter : (title <:: subtitle>) level=3 class
section : (title <:: subtitle>) level=4 class
paragraph : (title) level=5 class
stars : () class

# remaining structure declarations

copyright : () class=copyright row
dedication: () class=dedication
motto : () class=motto
foreword : (title) class
preface : (title) class
intro : (title) class

announcement : ()

# notes and footnotes

footnote : (footnote) inline
note : (note) inline

# class declarations

left: () class=left
right : () class=right
center : () class=center

smallcaps : (content) class=smallcaps
underline : (content) class=underline

end: () class

# declarations for special contents

frame : (borderwidth)
verse : (<title> <:: author>) class=verse row
