# english declarations map for gneposis publisher
# by Adam Szieberth

# author and title declarations

AUTHOR : author
TITLE : title

# declarations of metadata

DATE : date
DESCRIPTION : description
ISBN : isbn

# main structure declarations

BOOK : book
PART : part
CHAPTER : chapter
SECTION: section
PARAGRAPH : paragraph

# remaining structure declarations

COPYRIGHT : copyright
DEDICATION : dedication
MOTTO : motto
FOREWORD : foreword
PREFACE : preface
INTRO : intro

ANNOUNCEMENT : announcement

# notes and footnotes

FOOTNOTE : footnote
NOTE : note

# style declarations

LEFT : left
RIGHT : right
CENTER : center

SMALLCAPS : smallcaps
UNDERLINE : underline

# declarations for special contents

FRAME : frame
VERSE : verse
